@model CRUDelicious.Models.Dish

@{
    ViewBag.Title = "Add a new Dish!";
}

<h2 class="text-center">Add a new Dish!</h2>

<form asp-action="New" method="post">
    <div class="mb-3">
        <label asp-for="Chef">Chef's Name</label>
        <input asp-for="Chef" class="form-control" />
        <span asp-validation-for="Chef" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Tastiness" class="control-label">Tastiness</label>
        <select asp-for="Tastiness" class="form-select">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        <span asp-validation-for="Tastiness" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Name" class="control-label">Name of Dish</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Calories" class="control-label">Calories</label>
        <input asp-for="Calories" class="form-control" type="number" />
        <span asp-validation-for="Calories" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="control-label">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div>
        <input type="submit" value="Add Dish" class="btn btn-primary" />
    </div>
</form>
