@model List<Products_and_Categories.Models.Product>
@{
  ViewBag.Title = "Products";
}

<h2 class="mb-5">Products</h2>
<div class="content-wrapper flex">
  <div class="col-md-4">
    <h4>New Product</h4>
    <form asp-action="Create" method="post" class="mt-4">
      <div class="form-group flex">
        <label>Name</label>
        <input type="text" class="form-control" name="Name" />
      </div>
      <div class="form-group flex">
        <label>Description</label>
        <input type="text" class="form-control" name="Description" />
        
      </div>
      <div class="form-group flex">
        <label>Price</label>
        <input type="number" step="0.01" class="form-control" name="Price" />
      </div>
      <button type="submit" class="btn btn-primary mt-4">Create</button>
    </form>
  </div>
  <div class="col-md-8">
    <h4>All Products</h4>
    <ul class="list-group  mt-4">
      @foreach (var product in Model)
      {
        <li class="list-group-item">
          <a asp-controller="Products" asp-action="Show" asp-route-id="@product.ProductId">@product.Name</a>
        </li>
      }
    </ul>
  </div>
</div>
