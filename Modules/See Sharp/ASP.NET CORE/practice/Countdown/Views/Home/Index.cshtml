@{
    ViewData["Title"] = "Home Page";
}
@model CountdownModel

<div class="container">
    <div class="box">
        <h2>Start Time</h2>
        <p>@Model.StartTime.ToString("MMM dd, yyyy")</p>
        <p>@Model.StartTime.ToString("hh:mm tt")</p>
    </div>
    <div class="box">
        <h2>End Time</h2>
        <p>@Model.EndTime.ToString("MMM dd, yyyy")</p>
        <p>@Model.EndTime.ToString("hh:mm tt")</p>
    </div>
</div>

<h2>Time Remaining</h2>
<p>@Model.TimeRemaining.Days Day(s), @Model.TimeRemaining.Hours Hour(s), @Model.TimeRemaining.Minutes Minute(s)
    Remaining</p>
